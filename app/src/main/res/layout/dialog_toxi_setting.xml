<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:paddingTop="20dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:drawablePadding="15dp"
        android:fontFamily="@font/kopup_d_medium"
        android:text="읽는 속도"
        android:textColor="@color/main_text"
        android:gravity="center|start"
        app:drawableLeftCompat="@drawable/ic_speaking" />
    <SeekBar
        android:id="@+id/seekbarSpeakSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:thumbTint="@color/main_color_start"
        android:progressBackgroundTint="@color/main_color_end"
        android:progress="2"
        android:min="0"
        android:max="10"
        android:progressTint="@color/main_color_start"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="5dp"
        android:background="?android:attr/listDivider" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:drawablePadding="15dp"
        android:fontFamily="@font/kopup_d_medium"
        android:text="목소리 톤"
        android:textColor="@color/main_text"
        android:gravity="center|start"
        app:drawableLeftCompat="@drawable/ic_speaking" />
    <SeekBar
        android:id="@+id/seekbarVoiceTone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:thumbTint="@color/main_color_start"
        android:progressBackgroundTint="@color/main_color_end"
        android:progress="2"
        android:min="0"
        android:max="10"
        android:progressTint="@color/main_color_start"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="5dp"
        android:background="?android:attr/listDivider" />
    <!--    음성인식-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:drawablePadding="15dp"
        android:fontFamily="@font/kopup_d_medium"
        android:text="음성 인식 민감도"
        android:textColor="@color/main_text"
        android:gravity="center|start"
        app:drawableLeftCompat="@drawable/ic_mic" />
    <SeekBar
        android:id="@+id/seekbarRecognitionResponsiveness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:thumbTint="@color/main_color_start"
        android:progressBackgroundTint="@color/main_color_end"
        android:progress="8"
        android:min="0"
        android:max="20"
        android:progressTint="@color/main_color_start"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDialogCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:fontFamily="@font/kopup_d_medium"
            android:text="@string/cancel"
            android:textColor="#F06292"
            android:textSize="15sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDialogOK"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:fontFamily="@font/kopup_d_medium"
            android:text="@string/ok"
            android:textColor="#F06292"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>