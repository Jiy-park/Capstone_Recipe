<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/layerCreate"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:padding="15dp"
android:background="@drawable/style_round_button"
android:backgroundTint="@color/main_color_end">
    <ImageView
        android:id="@+id/ivCreateImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="right"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_create_recipe"/>
    <TextView
        android:id="@+id/tvCreateName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="만들기"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:fontFamily="@font/kopup_d_bold"/>
    <TextView
        android:id="@+id/tvCreateDetail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="새로운 나만의 레시피를 만들어 모두에게 공유해보세요."
        android:textSize="10sp"
        android:textColor="@color/white"
        android:fontFamily="@font/kopup_d_light"/>
</LinearLayout>